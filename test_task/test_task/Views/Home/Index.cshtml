@model IQueryable<test_task.Models.Shop>
@{
    ViewBag.Title = "Index";
}

<div>
    <div id="shops" class="col-lg-6">
        <h3>Shops</h3>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Work time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shop in Model)
                {
                    <tr class="name" id="@shop.ID">
                        <td>@shop.Name</td>
                        <td>@shop.Adress</td>
                        <td>@shop.WorkTime</td>
                    </tr>
                }
            </tbody>
        </table>
        <a id="addShop" class="btn btn-sm" href="/Home/AddShop" >Add new shop</a>

    </div>
    <div class="col-lg-6">
        <h3>Goods</h3>
        <div id="goods"></div>
    </div>
</div>

<script>
    $('tr[class="name"]').click(function () {
        var shopID = this.id;
        $.ajax({
            url: 'Home/GetGoods?id=' + shopID,
            success: function (response) {
                $('#goods').html(response);
            }
        });
    });
</script>